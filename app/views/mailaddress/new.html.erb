<h1>メールアドレス登録</h1>

<%= form_with model: @mail_address, html: {class: 'form-container'} do |form| %>
    <div class='form-input'><%= form.label :メールアドレス %> <%= form.text_field :メールアドレス %></div>
    <div class='form-input'><%= form.label :カテゴリー %> <%= form.text_field :カテゴリー %></div>
    <div class='form-input'><%= form.label :使用用途 %> <%= form.text_area :使用用途 %></div>
    <div class='button-container'><%= form.submit '登録' , class: 'link-button' %></div>
<% end %>
